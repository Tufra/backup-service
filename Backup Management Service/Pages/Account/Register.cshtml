@page
@model Backup_Management_Service.Pages.Account.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <form method="post" asp-antiforgery="true">
                        <h3 class="mb-5">Sign up</h3>
                        @Html.ValidationSummary()
                        <div class="mb-4">
                            <input asp-for="@Model.UserRegisterModel.Login" type="text" id="typeEmailX-2" class="form-control form-control-lg" />
                            <label asp-for="@Model.UserRegisterModel.Login" class="form-label" for="typeEmailX-2">Login</label>
                        </div>
                        <div class="mb-4">
                            <input asp-for="@Model.UserRegisterModel.Name" type="text" id="typeEmailX-2" class="form-control form-control-lg" />
                            <label asp-for="@Model.UserRegisterModel.Name" class="form-label" for="typeEmailX-2">Name</label>
                        </div>

                        <div class="mb-4">
                            <input asp-for="@Model.UserRegisterModel.PasswordHash" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                            <label asp-for="@Model.UserRegisterModel.PasswordHash" class="form-label" for="typePasswordX-2">Password</label>
                        </div>

                        <div class="d-flex justify-content-end mb-4">
                            <a asp-page="Login" class="link-primary"> Sign in if account exists</a>
                        </div>

                        <button class="btn btn-primary btn-lg" type="submit">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>