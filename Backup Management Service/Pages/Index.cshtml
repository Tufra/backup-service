@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header>
    <div class="navbar navbar-inverse navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="#" class="navbar-brand">BACKUP</a>
            </div>
        </div>
    </div>
</header>

<main class="container">
    <div class="create_backup">
        <h1>Create Backup</h1>
        <input type="file" id="file_loader">

        <div class="col-md-3 col">
            <div class="col-md-3">
                <input type="number" min="1" max="60" placeholder="mm">
            </div>
            <div class="col-md-3">
                <input type="number" min="1" max="23" placeholder="hh">
            </div>
            <div class="col-md-3">
                <input type="number" min="1" max="31" placeholder="DD">
            </div>
            <div class="col-md-3">
                <input type="number" min="1" max="12" placeholder="MM">
            </div>
        </div>

        <div>
            <input class="btn btn-primary" type="submit" value="Submit">
        </div>
    </div>

    <div class="p-3 rounded shadow-sm">
        <h3 class="border-bottom pb-1">
            Last backups
        </h3>

        <div class="d-flex pt-3">
            <div class="pb-2 lh-sm mb-0 w-100 border-bottom">
                <div class="d-flex justify-content-between">
                    Backup1
                    <a href="#" download=""><button>Download</button></a>
                </div>
            </div>
        </div>

        <div class="d-flex pt-3">
            <div class="pb-2 lh-sm mb-0 w-100 border-bottom">
                <div class="d-flex justify-content-between">
                    Backup2
                    <a href="#" download=""><button>Download</button></a>
                </div>
            </div>
        </div>

        <div class="d-flex pt-3">
            <div class="pb-2 lh-sm mb-0 w-100 border-bottom">
                <div class="d-flex justify-content-between">
                    Backup3
                    <a href="#" download=""><button>Download</button></a>
                </div>
            </div>
        </div>
    </div>
</main>
